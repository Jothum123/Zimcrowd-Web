# Environment Configuration for ZimCrowd Backend

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration (for additional security layer)
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRE=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
# For production: https://zimcrowd.com

# Security
SESSION_SECRET=your_session_secret_here_change_this_in_production

# Database Configuration
# MONGODB_URI=mongodb://localhost:27017/zimcrowd
# For production, use: mongodb+srv://username:password@cluster.mongodb.net/zimcrowd

# Email Configuration (for password reset and verification)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_FROM=ZimCrowd <noreply@zimcrowd.com>

# SMS Configuration (optional - for OTP via SMS)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# OTP Configuration
# OTP_LENGTH=6
# OTP_EXPIRE_MINUTES=5
# OTP_MAX_ATTEMPTS=3

# Redis Configuration (optional - for session storage)
# REDIS_URL=redis://localhost:6379

# File Upload Configuration
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=./uploads

# JWT Refresh Expire
# JWT_REFRESH_EXPIRE=7d

# Bcrypt Rounds
# BCRYPT_ROUNDS=12
